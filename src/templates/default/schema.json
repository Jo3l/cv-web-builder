{
  "title": "CV Data form",
  "description": "Please add your data",
  "type": "object",
  "required": ["firstName", "lastName"],
  "ui:order": ["firstName", "LastName", "*", "password"],
  "properties": {
    "firstName": {
      "type": "string",
      "title": "First name",
      "default": ""
    },
    "lastName": {
      "type": "string",
      "title": "Last name",
      "ui:options": {
        "description": "Add all your last name"
      },
      "err:required": "Last Name required"
    },
    "mainRole": {
      "type": "string",
      "title": "Main Role Title",
      "default": ""
    },
    "secondaryRole": {
      "title": "Secondary Role Title",
      "type": "string",
      "default": ""
    },
    "technicalKnowledge": {
      "type": "array",
      "title": "Technical Knowledge",
      "items": {
        "title": "Knowledge",
        "type": "string",
        "default": ""
      }
    },
    "roles": {
      "type": "array",
      "title": "Roles",
      "items": {
        "title": "Role title",
        "type": "string",
        "default": ""
      }
    },
    "hashTags": {
      "type": "array",
      "title": "Knowledge Tags",
      "items": {
        "title": "Tag",
        "type": "string",
        "default": "Developer"
      }
    },
    "certificationsAwards": {
      "type": "array",
      "title": "Certifications / Awards",
      "items": {
        "title": "Knowledge",
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "title": "Title",
            "default": ""
          },
          "description": {
            "type": "string",
            "title": "Description",
            "default": ""
          }
        }
      }
    },
    "aboutYou": {
      "type": "object",
      "title": "About you",
      "properties": {
        "textarea": {
          "type": "string",
          "title": "this textarea will support markdown",
          "ui:options": {
            "type": "textarea"
          }
        }
      }
    },
    "workExperience": {
      "type": "array",
      "title": "Work Experience",
      "items": {
        "title": "Knowledge",
        "type": "object",
        "properties": {
          "timePeriod": {
            "type": "string",
            "title": "Time period",
            "default": "2020 - Present"
          },
          "position": {
            "type": "string",
            "title": "Position",
            "default": ""
          },
          "description": {
            "type": "string",
            "title": "Description",
            "default": ""
          }
        }
      }
    }
  }
}
